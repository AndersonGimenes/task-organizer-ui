<form asp-controller="Task" asp-action="Index" method="Post" class="card pt-2 m-1 col-md-3">
    <h5 class="card-title text-center text-success">Done</h5>
    @{
        var doneList = (List<TaskModel>)ViewData["DoneList"];
        if(doneList != null && doneList.Count > 0)
        { 
            foreach(var task in doneList)
            {
                <input type="hidden" name="TaskNumber" />
                <div class="d-flex justify-content-center">
                    <div class="card text-white bg-success mb-3">
                        <div class="card-header">
                            <input disabled type="text" name="Title" class="form-control" value="@task.Title" >
                        </div>
                        <div class="card-body">
                            <div style="height: 10rem;">
                                <textarea disabled name="Description" class="form-control"rows="5">@task.Description</textarea>
                            </div>
                            <div>
                                <label>Estimated date</label>
                                <input disabled asp-for="@task.EstimatedDate" id="estimatedDate-@task.TaskNumber" type="date" class="form-control" />
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button disabled class="btn btn-light m-2">Done</button>
                        </div>
                    </div>
                </div>

            }
        }    
    }
</form>