<form asp-controller="Task" asp-action="Index" method="Post" class="card pt-2 m-1 col-md-3">
    <h5 class="card-title text-center text-warning">In Progress</h5>
    @{
        var inProgressList = (List<TaskModel>)ViewData["InProgressList"];
        if(inProgressList != null && inProgressList.Count > 0)
        {    
            foreach(var task in inProgressList)
            { 
                <input type="hidden" name="TaskNumber" />
                <div class="d-flex justify-content-center">
                    <div class="card text-white bg-warning mb-3">
                        <div class="card-header">
                            <input disabled type="text" name="Title" class="form-control" value="@task.Title">
                        </div>
                        <div class="card-body">
                            <div style="height: 10rem;">
                                <textarea name="Description" class="form-control" rows="5">@task.Description</textarea>
                            </div>
                            <div>
                                <label>Estimated date</label>
                                <input disabled type="date" asp-for="@task.EstimatedDate" id="estimatedDate-@task.TaskNumber" class="form-control" />
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-light m-2">End Task</button>
                        </div>
                    </div>
                </div>
            }
        }    
    }
</form>