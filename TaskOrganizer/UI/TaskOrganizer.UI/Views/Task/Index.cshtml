@{
    ViewData["Title"] = "Task Organizer";
}
@model TaskModel

<div class="container">
    <div class="form-group row d-flex justify-content-center">
        <form asp-controller="Task" asp-action="Index" method="Post" class="card pt-2 m-1 col-md-3">
            <input type="hidden" asp-for="TaskNumber" />
            <h5 class="card-title text-center text-info">To Do</h5>
            <div class="d-flex justify-content-center">
                <div class="card text-white bg-info mb-3">
                    <div class="card-header">
                        <input type="text" asp-for="Title" class="form-control" placeholder="Type any title">
                    </div>
                    <div class="card-body">
                        <div style="height: 10rem;">
                            <textarea asp-for="Description" class="form-control" placeholder="Type any description" rows="5"></textarea>
                        </div>
                        <div>
                            <label>Estimated date</label>
                            <input asp-for="EstimatedDate" type="date" class="form-control" />
                        </div>
                    </div>
                    @{
                        if(Model is null)
                        {
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-light m-2">Create</button>
                                <button class="btn btn-light m-2">Discard</button>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-light m-2">Start Task</button>
                                <button class="btn btn-light m-2">Delete</button>
                            </div>
                        }                 
                    }
                </div>
            </div>            
        </form>

        <form asp-controller="Task" asp-action="Index" method="Post" class="card pt-2 m-1 col-md-3">
            <h5 class="card-title text-center text-warning">In Progress</h5>
            <div class="d-flex justify-content-center">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-header">
                        <input disabled type="text" asp-for="Title" class="form-control" placeholder="Type any title">
                    </div>
                    <div class="card-body">
                        <div style="height: 10rem;">
                            <textarea asp-for="Description" class="form-control" placeholder="Type any description" rows="5"></textarea>
                        </div>
                        <div>
                            <label>Estimated date</label>
                            <input disabled type="date" asp-for="EstimatedDate" class="form-control" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-light m-2">End Task</button>
                    </div>
                </div>
            </div>
        </form>

        <form asp-controller="Task" asp-action="Index" method="Post" class="card pt-2 m-1 col-md-3">
            <h5 class="card-title text-center text-success">Done</h5>
            <div class="d-flex justify-content-center">
                <div class="card text-white bg-success mb-3">
                    <div class="card-header">
                        <input disabled type="text" asp-for="Title" class="form-control" placeholder="Type any title">
                    </div>
                    <div class="card-body">
                        <div style="height: 10rem;">
                            <textarea disabled asp-for="Description" class="form-control" placeholder="Type any description" rows="5"></textarea>
                        </div>
                        <div>
                            <label>Estimated date</label>
                            <input disabled asp-for="EstimatedDate" type="date" class="form-control" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button disabled class="btn btn-light m-2">Done</button>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

@section scripts{
    <script src="~/js/site.js"></script>
}