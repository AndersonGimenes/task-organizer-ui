<form asp-controller="Task" asp-action="Index" method="Post" class="card pt-2 m-1 col-md-3">
    <h5 class="card-title text-center text-info">To Do</h5>
    @{
        var todoList = (List<TaskModel>)ViewData["ToDoList"];
        if(todoList != null && todoList.Count > 0)
        {
            foreach(var task in todoList)
            {   
                <input type="hidden" name="TaskNumber" />
                <div class="d-flex justify-content-center">
                    <div class="card text-white bg-info mb-3">
                        <div class="card-header">
                            <input type="text" name="Title" class="form-control" value="@task.Title">
                        </div>
                        <div class="card-body">
                            <div style="height: 10rem;">
                                <textarea name="Description" class="form-control" rows="5">@task.Description</textarea>
                            </div>
                            <div>
                                <label>Estimated date</label>
                                <input asp-for="@task.EstimatedDate" id="estimatedDate-@task.TaskNumber" type="date" class="form-control" />
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-light m-2">Start Task</button>
                            <button class="btn btn-light m-2">Delete</button>
                        </div>
                    </div>
                </div>

            }
        }
    }    
</form>